<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:paddingStart="12dp"
    android:background="?attr/selectableItemBackground"
    tools:ignore="RtlSymmetry"
    >

    <com.nodomain.manyface.ui.customviews.RoundedImageView
        android:id="@+id/iv_picture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/picture_placeholder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_messages_count"
        android:layout_height="28dp"
        android:layout_width="28dp"
        app:layout_constraintRight_toRightOf="@+id/iv_picture"
        app:layout_constraintLeft_toLeftOf="@+id/iv_photo"
        app:layout_constraintHorizontal_bias="1.2"
        app:layout_constraintTop_toTopOf="@+id/iv_photo"
        tools:text="14"
        tools:visibility="visible"
        style="@style/TextViewMessagesCount"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_photo"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="mr_lvinoe_serdce"
        style="@style/TextViewUserItem.Username"
        />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_photo"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Very very very long description of some user of this account"
        style="@style/TextViewUserItem.Description"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:layout_constraintLeft_toRightOf="@+id/iv_photo"
        />

</android.support.constraint.ConstraintLayout>