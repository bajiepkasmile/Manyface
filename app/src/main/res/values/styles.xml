<resources>

    <style name="FocusRecipient">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="AppButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="EditTextAuthorization">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextAuthorization.Login" parent="EditTextAuthorization">
        <item name="android:hint">@string/login</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="EditTextAuthorization.Password" parent="EditTextAuthorization">
        <item name="android:hint">@string/password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditTextAuthorization.PasswordConfirmation" parent="EditTextAuthorization">
        <item name="android:hint">@string/password_confirmation</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextViewAuthorizationError">
        <item name="android:textColor">@color/deeppink</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ButtonAuthorization">
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="TextViewProfileItem">
        <item name="android:padding">4dp</item>
    </style>

    <style name="TextViewProfileItem.Name" parent="TextViewProfileItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewProfileItem.Description" parent="TextViewProfileItem">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="EditTextEditableProfile">
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="EditTextEditableProfile.Name" parent="EditTextEditableProfile">
        <item name="android:hint">@string/profile_name</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="EditTextEditableProfile.Description" parent="EditTextEditableProfile">
        <item name="android:hint">@string/description</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="TextViewMessagesCount">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/background_messages_count</item>
    </style>

    <style name="TextViewEmptyListHint">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="ImageViewEmptyListHint">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/circle_gray</item>
    </style>

</resources>
