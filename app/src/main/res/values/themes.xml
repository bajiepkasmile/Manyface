<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/primary_dark</item>
    </style>

    <style name="AuthorizationTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_authorization</item>
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorControlHighlight">@color/primary_dark</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/primary</item>
        <item name="actionMenuTextColor">@color/transparent_white</item>
        <item name="elevation">4dp</item>
    </style>



    
    <style name="SearchViewTheme">
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

</resources>